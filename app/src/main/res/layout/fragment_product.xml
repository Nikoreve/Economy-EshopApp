<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecond1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="database.RoomUI_Fragment">

    <CheckedTextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="This is a UI embraced with Room API database"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </CheckedTextView>

    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="8dp"
        android:gravity="start"
        android:text="What whould you like to do?"
        android:textColor="@color/colorPrimary1"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text">
        <!--        android:textAppearance="@color/redFix"-->
    </TextView>

    <Button
        android:id="@+id/adduser_button"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimary1"

        android:drawableLeft="@drawable/ic_config_add_circle_outline_24"
        android:gravity="center"
        android:soundEffectsEnabled="true"
        android:text="Add User"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_text"></Button>

    <Button
        android:id="@+id/query_button"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimary1"
        android:drawableLeft="@drawable/ic_config_outline_arrow_circle_right_24"
        android:gravity="center"
        android:soundEffectsEnabled="true"
        android:text="Entry Queries"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adduser_button"></Button>

    <Button
        android:id="@+id/update_button"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimary1"
        android:drawableLeft="@drawable/ic_config_outline_update_24"
        android:gravity="center"
        android:soundEffectsEnabled="true"
        android:text="Update User"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/query_button"></Button>

    <Button
        android:id="@+id/delete_button"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimary1"
        android:drawableLeft="@drawable/ic_config_outline_delete_24"
        android:gravity="center"
        android:soundEffectsEnabled="true"
        android:text="Delete User"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_button" />

</androidx.constraintlayout.widget.ConstraintLayout>